<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inicio_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.vidas.salvando.com.cajamarca.salvandovidas.InicioRegistro">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="198dp"
            android:layout_height="239dp"
            app:srcCompat="@mipmap/logosalvando"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtusu"
            android:layout_margin="10dp"
            android:hint="Correo ElectrÃ³nico" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtpass"
            android:layout_margin="10dp"
            android:hint="*******" />

        <Button
            android:text="Ingresar"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnIngresar"
            android:layout_gravity="center_horizontal"
            android:background="#87d2cb"
            android:layout_margin="10dp"
            />

        <Button
            android:text="Crear Cuenta"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:id="@+id/btnCrear" />

    </LinearLayout>
</RelativeLayout>
